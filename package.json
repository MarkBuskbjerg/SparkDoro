{
  "name": "sparkdoro",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "test": "vitest run --config vitest.unit.config.ts",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:component": "vitest run --config vitest.component.config.ts",
    "test:watch": "vitest --config vitest.component.config.ts",
    "test:a11y": "vitest run --config vitest.a11y.config.ts",
    "test:a11y:browser": "playwright test --grep @a11y",
    "test:e2e:web": "playwright test --grep-invert @a11y",
    "test:e2e:android": "node scripts/run-maestro.cjs",
    "verify": "npm-run-all lint typecheck test:unit test:component test:a11y test:a11y:browser test:e2e:web",
    "verify:android": "npm-run-all verify test:e2e:android",
    "prepare": "husky"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/haptics": "^8.0.1",
    "@capacitor/local-notifications": "^8.0.1",
    "@capacitor/preferences": "^8.0.1",
    "@ionic/react": "^8.7.18",
    "@ionic/react-router": "^8.7.18",
    "axe-core": "^4.11.1",
    "dayjs": "^1.11.19",
    "i18next": "^25.8.13",
    "i18next-icu": "^2.4.3",
    "ionicons": "^8.0.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^5.3.4",
    "recharts": "^3.7.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@axe-core/react": "^4.11.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/ios": "^8.0.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-testing-library": "^7.13.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
